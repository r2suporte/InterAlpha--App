# 🔧 Configuração de Desenvolvimento Local - SQLite
# Use este arquivo para desenvolvimento rápido sem Supabase

# 🗄️ Database Local (SQLite)
DATABASE_URL="file:./dev.db"

# 🔑 NextAuth Secret (Obrigatório)
NEXTAUTH_SECRET="interalpha-dev-secret-2025-local-sqlite"

# 🔐 JWT Secret para autenticação de clientes (Obrigatório)
JWT_SECRET="interalpha-jwt-secret-2025-local-development"

# 📱 SMS/WhatsApp - Twilio (Opcional para desenvolvimento)
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="your_twilio_phone_number"

# 📱 WhatsApp Business API (Opcional)
WHATSAPP_PHONE_NUMBER_ID="your_whatsapp_phone_number_id"
WHATSAPP_ACCESS_TOKEN="your_whatsapp_access_token"
WHATSAPP_WEBHOOK_VERIFY_TOKEN="your_webhook_verify_token"
WHATSAPP_API_VERSION="v18.0"

# 💳 Stripe (Opcional)
STRIPE_SECRET_KEY="your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="your_stripe_webhook_secret"

# 📧 Email - Nodemailer (Opcional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"

# 📅 Google Calendar (Opcional)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/callback/google"

# 🔄 Redis (Opcional)
REDIS_URL="redis://localhost:6379"

# 💼 Sistema Contábil (Opcional)
ACCOUNTING_API_URL="https://api.contabil.com"
ACCOUNTING_API_KEY="your_accounting_api_key"

# 🔄 Backup (Opcional)
BACKUP_STORAGE_URL="your_backup_storage_url"
BACKUP_ENCRYPTION_KEY="your_backup_encryption_key"