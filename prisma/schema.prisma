// üè≠ Modelo de Fornecedor
model Fornecedor {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  nome          String   @db.VarChar(255)
  cpfCnpj       String?  @map("cpf_cnpj") @db.VarChar(20)
  email         String?  @db.VarChar(255)
  telefone      String?  @db.VarChar(20)
  endereco      String?  @db.Text
  observacoes   String?  @db.Text
  
  pecas         Peca[]
  despesas      Despesa[]
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt     DateTime @updatedAt @map("updated_at") @db.Timestamptz

  @@map("fornecedores")
}

// üì¶ Modelo de Pe√ßa (Estoque)
model Peca {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  nome          String   @db.VarChar(255)
  codigo        String?  @unique @db.VarChar(50) // SKU
  marca         String?  @db.VarChar(100)
  modelo        String?  @db.VarChar(100)
  
  quantidade    Int      @default(0)
  minimo        Int      @default(1) // Estoque m√≠nimo para alerta
  
  precoCusto    Decimal  @map("preco_custo") @db.Decimal(10, 2)
  precoVenda    Decimal  @map("preco_venda") @db.Decimal(10, 2)
  localizacao   String?  @db.VarChar(100) // Prateleira A, etc.
  
  fornecedorId  String?  @map("fornecedor_id") @db.Uuid
  fornecedor    Fornecedor? @relation(fields: [fornecedorId], references: [id])
  
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt     DateTime @updatedAt @map("updated_at") @db.Timestamptz

  usos PecaUtilizada[]

  @@map("pecas")
}
